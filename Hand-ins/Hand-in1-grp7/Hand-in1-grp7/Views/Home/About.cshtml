@using System.Linq;
@using System.Collections.Specialized;
@using Hand_in1_grp7.Models;

@model ComponentOverview


@{
    ViewBag.Title = "Components";
}
<h2>@ViewBag.Title.</h2>


<div>

    <div class="col-xs-4">
        <a href="~/Home/Contact" class="btn btn-default">Changes to category</a>
    </div>
    <div class="col-xs-4">
        <a href="~/Home/Contact" class="btn btn-default">Potato</a>
    </div>
    <div class="col-xs-4">
        <a href="~/Home/Contact" class="btn btn-default">Add component</a>
    </div>

    <div class="col-xs-4">
        <h2>Categories</h2>
        <ul class="nav nav-pills nav-stacked">
            @if( Model.Categories.Count > 0)
            {
                foreach (var item in Model.Categories)
                {
                    <li role="presentation"><a href="?@item.Name">@item.Name</a></li>
                }
            }
            else
            {
                <p>No categories in database</p>
            }
        </ul>
    </div>

    <div class="col-xs-8">
        <h2>Components</h2>
            @if(Model.Components.Count>0){
                foreach (var item in Model.Components)
                {
                    //replace # with link
                    <div class="col-xs-8">
                        <a href="~/Home/Component?@item.Name" class="list-group-item">
                        <h3 class="list-group-item-heading">@item.Name</h3>
                        <p class="list-group-item-text">@item.Info</p>
                        </a>
                    </div>
                    <div class="col-xs-4">
                        <div class="btn-group-vertical" role="group">
                            <a href="~/Home/EditComponent?@item.Name" class="btn btn-warning" role="button">Edit</a>
                            <a href="~/Home" class="btn btn-danger" role="button">Delete</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No category picked</p>
            }
    </div>
</div>


